{
  "name": "mcp-to-typescript-codegen",
  "version": "0.1.5",
  "description": "Generate TypeScript types from MCP (Model Context Protocol) servers.",
  "license": "MIT",
  "author": "shawngustaw",
  "repository": {
    "type": "git",
    "url": "https://github.com/shawngustaw/mcp-to-typescript-codegen"
  },
  "homepage": "https://github.com/shawngustaw/mcp-to-typescript-codegen#readme",
  "bugs": {
    "url": "https://github.com/shawngustaw/mcp-to-typescript-codegen/issues"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "typescript",
    "codegen",
    "types"
  ],
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "mcp-to-typescript-codegen": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bunup",
    "dev": "bunup --watch",
    "prepare": "bun simple-git-hooks",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "release": "bumpp --commit --push --tag",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/bun": "^1.3.3",
    "bumpp": "^10.3.2",
    "bunup": "^0.16.10",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": ">=4.5.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "module": "./dist/index.js",
  "simple-git-hooks": {
    "pre-commit": "bun run lint && bun run type-check"
  },
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "prettier": "^3.7.4",
    "ts-morph": "^27.0.2"
  }
}
